# Project Leroy - Environment Configuration
# Copy this file to leroy.env and customize as needed

# Web Server Configuration
LEROY_WEB_PORT=8080
LEROY_WEB_HOST=localhost

# Browser Auto-Launch
LEROY_AUTO_LAUNCH_BROWSER=true

# Optional: Custom browser command
# LEROY_BROWSER_CMD=chromium-browser

# Camera Resolution Configuration
# Detection resolution: Fast capture for inference (will be resized to 500px anyway)
LEROY_DETECTION_WIDTH=1280
LEROY_DETECTION_HEIGHT=960

# Photo resolution: High quality for saving when birds detected
LEROY_PHOTO_WIDTH=4056
LEROY_PHOTO_HEIGHT=3040

